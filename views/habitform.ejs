<div class="px-5 w-1/2 mx-auto mt-10">
    <h3 class="font-medium text-xl"><%= title  %></h3>
    <form  class="mt-2" action="<%= title == 'Edit Habit' ? "/habits/update-habit" : "/habits/create-habit" %>" method="POST">
        <div>
            <input type="text" class="px-4 py-2 w-full mt-3 border rounded-lg focus:outline-none" name="title" value="<%= (title=='Edit Habit') ? habit.title : '' %>" placeholder="Habit Title" autocomplete="off">
        </div>
        <div>
            <input type="text" class="px-4 py-2 w-full mt-3 border rounded-lg focus:outline-none"  name="duration" value="<%= title=='Edit Habit' ? habit.duration : '' %>" placeholder="Duration (optional)" autocomplete="off">
        </div>
        <div>
            <textarea type="text" class="px-4 py-2 w-full mt-3 border rounded-lg focus:outline-none" name="description" value="<%= title=='Edit Habit' ? habit.description : '' %>" placeholder="Description (optional)" autocomplete="off"></textarea>
        </div>
        <div class="mt-2">
            <label class="block" for="favcolor">Select color for your habit</label>
            <input type="color" class="" id="favcolor" name="color" value="<%= title=='Edit Habit' ? habit.color : '' %>" autocomplete="off">
            <% if( title == "Edit Habit") { %>
                <input type="hidden" class="" id="favcolor" name="habit_id" value="<%= title=='Edit Habit' ? habit.id : '' %>" autocomplete="off">
                <% } else{ %>
                    <input type="hidden" class="" id="favcolor" name="user" value="<%= locals.user %>" autocomplete="off">
          <% } %> 
        </div>
        <div class="pt-5">
            <button class="bg-[#6890EA] text-white py-2 rounded-xl w-full"><%= title %></button>
        </div>
    </form>
</div>