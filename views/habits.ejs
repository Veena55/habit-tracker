<div class="">
    <div class="shadow-md px-5 sticky top-0 z-[1000] bg-white">
        <div class="days-of-this-week flex justify-between items-center">
        </div>
    </div>
    <!-- Habit Lists -->
    <div class="mt-5 mb-5 overflow-visible p-5" style="overflow: overlay;">
        <div class="font-bold mb-2">
            <!-- <a href=""></a><i class="fa-solid fa-arrow-left p-2 mx-1 text-red-500"></i> -->
            <a href="/home"><i class="fa-solid fa-home p-2 mx-1 text-red-500"></i></a>
            <a href="/habits/progress"><i class="fa-solid fa-chart-simple p-2 mx-1 text-red-500"></i></a>
            <a href="/habits/add-habit" class="bg-blue-100 text-blue-700 rounded-lg px-5 py-2"><i
                    class="fa-solid fa-plus mr-2 font-medium"></i>New Habit</a>
        </div>
        <% for(habit in habitList) { %>
            <div class="border-blue-300 border flex-col lg:flex-row rounded-lg p-10 mx-auto flex justify-between items-center mt-5">
                <div class="flex items-center gap-3">
                    <div class="w-5 h-5 rounded-full" style="background: <%= habitList[habit].color %>"></div>
                    <!-- <i class="fa-solid fa-person-walking fa-2x"></i> -->
                    <div>
                        <p class="text-lg"><%= habitList[habit].title%></p>
                        <p><small><%= habitList[habit].duration%></small></p>
                    </div>
                    <a href="/habits/edit-habit/<%= habitList[habit]._id %>"><i class="fa-solid fa-pencil text-blue-700 text-lg font-bold rounded-full p-3 bg-blue-200"></i></a>
                </div>
                <div class="mt-5 lg:mt-0">
                    <p class="text-gray-400 bg-gray-200 p-2 rounded-md">
                        <%= habitList[habit].description=='' ? "No Description" : habitList[habit].description %>
                    </p>
                </div>
                <div class="mt-5 lg:mt-0">                    
                    <% if(habitList[habit].status=='Done') { %>
                    <span class="text-green-800 font-medium rounded-md p-3 bg-green-200"> <i class="fa fa-check "></i> Completed</span>
                    <% } else if(habitList[habit].status=='Not Done') { %>
                       <sapn class="text-red-800 font-medium rounded-md p-3 bg-red-200"><i class="fa fa-close"></i> Not Completed</sapn> 
                   <% } else { %>
                    <sapn class="text-yellow-800 font-medium rounded-md p-3 bg-yellow-200"><i class="fa fa-question"></i> Unknown</sapn>
                        <% } %>
                    <select class="rounded-md p-2 shadow-md ml-3" name="status" id="updateStatus" onchange="updateStatus(this.value)">
                        <option disabled selected>Updatate Status</option>
                        <option value="Done,<%= habitList[habit]._id %>">Done</option>
                        <option value="Not Done,<%= habitList[habit]._id %>">Not Done</option>
                    </select>
                </div>
            </div>
            <% } %>
    </div>
</div>
<script src="../js/script.js"></script>